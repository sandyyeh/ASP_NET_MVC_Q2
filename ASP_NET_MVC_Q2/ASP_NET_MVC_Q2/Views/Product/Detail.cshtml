@model ASP_NET_MVC_Q2.ViewModel.DetailViewModel

@{
    ViewBag.Title = "Detail";
}

<h2>Detail</h2>
@if (Model != null)
{
    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>ProductName</dt>
            <dd>@Html.DisplayFor(model => model.Product.Product_Name)</dd>
            <dt>Locale</dt>
            <dd>@Html.DisplayFor(model => model.Product.Locale)</dd>
            <dt>Price</dt>
            <dd>@Html.DisplayFor(model => model.Detail.Price)</dd>
            <dt>PromotePrice</dt>
            <dd>@Html.DisplayFor(model => model.Detail.Promote_Price)</dd>
            <dt>CreateDate</dt>
            <dd>@Html.DisplayFor(model => model.Product.Create_Date)</dd>
        </dl>
    </div>

}
<p>
    @Html.ActionLink("Back to List", "Product")
</p>
